/* page/component/component-pages/wx-text/wx-text1.wxss */
.page {
  padding: 20rpx;
}

.idiom-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #1aad19;
  display: block;
  margin-bottom: 30rpx;
  text-align: center;
}

.idiom-info {
  font-size: 28rpx;
  line-height: 1.6;
  display: block;
  margin-bottom: 40rpx;
}

.btn-container {
  text-align: center;
  margin-top: 40rpx;
}

.btn-group {
  display: flex;
  justify-content: center;
  gap: 30rpx;
  margin-bottom: 20rpx;
}

.btn {
  border-radius: 10rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  color: white;
  border: none;
}

.next-btn {
  background-color: #1aad19;
}

.random-btn {
  background-color: #10aeff;
}

.progress-text {
  font-size: 24rpx;
  color: #888;
  display: block;
  text-align: center;
}

/* 上传模态框样式 - 优化输入框 */
.upload-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.upload-content {
  background: white;
  width: 90%;
  max-width: 700rpx; /* 增大宽度 */
  border-radius: 15rpx;
  max-height: 85vh; /* 增加高度 */
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.upload-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  flex-shrink: 0; /* 防止压缩 */
}

.close-btn {
  font-size: 40rpx;
  color: #999;
}

.upload-form {
  flex: 1;
  padding: 30rpx;
  max-height: calc(85vh - 200rpx); /* 动态计算高度 */
  overflow-y: auto;
  display: flex;
  flex-direction: column;
}

.form-item {
  margin-bottom: 35rpx;
  flex-shrink: 0; /* 防止表单项目被压缩 */
}

.label {
  display: block;
  margin-bottom: 15rpx;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.form-item input,
.form-item textarea {
  width: 100%;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 25rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  line-height: 1.5;
  min-height: 80rpx; /* 设置最小高度 */
  background: #fafafa;
  transition: border-color 0.3s;
}

.form-item input:focus,
.form-item textarea:focus {
  border-color: #07c160;
  background: white;
  outline: none;
}

.form-item textarea {
  min-height: 150rpx;
  resize: vertical; /* 允许垂直调整大小 */
  line-height: 1.6;
}

/* 必填字段样式 */
.label.required::after {
  content: " *";
  color: #ff4757;
}

.upload-actions {
  padding: 30rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  gap: 20rpx;
  flex-shrink: 0; /* 防止按钮区域被压缩 */
}

.btn-cancel, .btn-submit {
  flex: 1;
  padding: 25rpx;
  border: none;
  border-radius: 8rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.btn-cancel {
  background: #f8f9fa;
  color: #666;
  border: 1rpx solid #ddd;
}

.btn-submit {
  background: #07c160;
  color: white;
}

.btn-submit:active {
  background: #06a652;
}

.btn-cancel:active {
  background: #e9ecef;
}

/* 上传按钮样式 */
.upload-btn-container {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
}

.upload-btn {
  background: #07c160;
  color: white;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

/* 操作按钮容器 */
.action-buttons {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 20rpx;
}

.upload-btn, .clear-btn {
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  border: none;
  min-width: 160rpx;
  text-align: center;
}

.upload-btn {
  background: #07c160;
  color: white;
}

.clear-btn {
  background: #ff6b6b;
  color: white;
}

/* 滚动条样式 */
.upload-form::-webkit-scrollbar {
  width: 6rpx;
}

.upload-form::-webkit-scrollbar-thumb {
  background: #ccc;
  border-radius: 3rpx;
}

.upload-form::-webkit-scrollbar-track {
  background: #f1f1f1;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .upload-content {
    width: 95%;
    max-width: 650rpx;
  }
  
  .upload-form {
    padding: 25rpx;
  }
  
  .form-item input,
  .form-item textarea {
    padding: 20rpx;
    font-size: 28rpx;
  }
}