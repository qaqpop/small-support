/* component-pages/wx-text2/wx-text2.wxss */
.container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 搜索区域 */
.search-section {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  background: white;
  border-radius: 10rpx;
  padding: 20rpx;
}

.search-input {
  flex: 1;
  height: 60rpx;
  font-size: 28rpx;
}

.clear-btn {
  color: #007AFF;
  font-size: 28rpx;
  margin-left: 20rpx;
}

/* 分类筛选 */
.category-section {
  white-space: nowrap;
  margin-bottom: 30rpx;
}

.category-item {
  display: inline-block;
  padding: 15rpx 30rpx;
  margin-right: 20rpx;
  background: white;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
}

.category-item.active {
  background: #007AFF;
  color: white;
}

/* 中间内容区域 */
.middle-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.sentence-display {
  background: white;
  border-radius: 15rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  text-align: center;
}

.sentence-content {
  font-size: 36rpx;
  line-height: 1.6;
  margin-bottom: 30rpx;
  min-height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}

/* 高亮文本样式 */
.normal-text {
  color: #333;
}

.highlight-text {
  background-color: #ff9500 !important;  /* 橙色背景 */
  color: #333 !important;
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
  font-weight: bold;
}

.sentence-info {
  font-size: 26rpx;
  color: #999;
}

/* 分类标签 - 绿色背景 */
.sentence-category {
  background: #4CAF50 !important;  /* 绿色背景 */
  color: white !important;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 分析结果 */
.analysis-result {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #eee;
}

.analysis-title {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 20rpx;
}

.repeated-words {
  font-size: 26rpx;
  color: #007AFF;
}

.word-item {
  display: block;
  margin-bottom: 10rpx;
}

.counter {
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
}

/* 搜索结果 */
.search-results {
  background: white;
  border-radius: 15rpx;
  padding: 30rpx;
}

.results-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.results-list {
  max-height: 400rpx;
}

.result-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.result-item:last-child {
  border-bottom: none;
}

.result-content {
  font-size: 28rpx;
  line-height: 1.5;
  margin-bottom: 10rpx;
  display: flex;
  flex-wrap: wrap;
}

.result-info {
  font-size: 24rpx;
  color: #999;
}

/* 搜索结果中的分类标签 - 绿色背景 */
.result-category {
  background: #4CAF50 !important;  /* 绿色背景 */
  color: white !important;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  font-size: 28rpx;
  color: #999;
  padding: 100rpx 0;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.btn {
  flex: 1;
  margin: 0 15rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  border: none;
}

.prev-btn {
  background: #f0f0f0;
  color: #333;
}

.random-btn {
  background: #007AFF;
  color: white;
}

.next-btn {
  background: #f0f0f0;
  color: #333;
}