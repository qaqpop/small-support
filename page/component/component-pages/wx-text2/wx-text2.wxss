.container {
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 30rpx 0;
}

.title {
  display: block;
  font-size: 42rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 15rpx;
  text-shadow: 0 2rpx 10rpx rgba(0,0,0,0.2);
}

.subtitle {
  display: block;
  font-size: 26rpx;
  color: rgba(255,255,255,0.8);
  letter-spacing: 1rpx;
}

.navigation {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
  padding: 0 20rpx;
}

.nav-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 30rpx;
  background: rgba(255,255,255,0.95);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
  transition: all 0.3s ease;
  min-width: 150rpx;
}

.nav-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.2);
}

.btn-icon {
  font-size: 36rpx;
  margin-bottom: 10rpx;
}

.btn-text {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.prev-btn .btn-icon {
  color: #FF6B6B;
}

.random-btn .btn-icon {
  color: #4ECDC4;
}

.next-btn .btn-icon {
  color: #45B7D1;
}

.content-section {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.sentence-card {
  background: rgba(255,255,255,0.95);
  border-radius: 30rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 15rpx 50rpx rgba(0,0,0,0.2);
  border-left: 8rpx solid #007AFF;
  text-align: center;
  max-width: 90%;
  animation: fadeInUp 0.6s ease;
  position: relative;
  overflow: hidden;
}

.sentence-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(0,122,255,0.05), transparent);
  transition: left 0.6s ease;
}

.sentence-card:active::before {
  left: 100%;
}

.sentence-content {
  font-size: 36rpx;
  line-height: 1.8;
  color: #333;
  margin-bottom: 40rpx;
  font-weight: 500;
  text-align: justify;
}

.sentence-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 30rpx;
  border-top: 2rpx solid #f0f0f0;
}

.category-badge {
  background: linear-gradient(145deg, #e3f2fd, #bbdefb);
  color: #1976d2;
  padding: 12rpx 25rpx;
  border-radius: 25rpx;
  font-size: 26rpx;
  font-weight: 600;
  box-shadow: 0 2rpx 15rpx rgba(25,118,210,0.2);
}

.sentence-index {
  color: #999;
  font-size: 26rpx;
  font-weight: 500;
  background: #f5f5f5;
  padding: 8rpx 18rpx;
  border-radius: 20rpx;
}

.empty-state {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
  font-size: 30rpx;
  background: rgba(255,255,255,0.95);
  border-radius: 20rpx;
  width: 100%;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(50rpx) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateX(100rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes slideOut {
  from {
    opacity: 1;
    transform: translateX(0);
  }
  to {
    opacity: 0;
    transform: translateX(-100rpx);
  }
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .container {
    padding: 20rpx;
  }
  
  .sentence-card {
    padding: 40rpx 30rpx;
  }
  
  .sentence-content {
    font-size: 32rpx;
  }
  
  .navigation {
    padding: 0 10rpx;
  }
  
  .nav-btn {
    padding: 15rpx 20rpx;
    min-width: 120rpx;
  }
}